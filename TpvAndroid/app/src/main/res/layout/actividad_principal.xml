<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Principal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:layout_marginTop="15dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:id="@+id/imageView2"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"
        android:background="#ff66cc66"
        android:src="@drawable/shape" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:id="@+id/imageView3"
        android:src="@drawable/shape"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:background="#ff333333" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:id="@+id/imageView4"
        android:src="@drawable/shape"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#ffffcc66" />

    <HorizontalScrollView
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:id="@+id/horizontalScrollView"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginTop="28dp"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:id="@+id/etUsuario"
            android:hint="@string/usuario"
            android:textColor="#ffffffff"
            android:editable="true"
            android:textColorHint="#FFFFFF"
            android:background="@drawable/shapecajas"
            android:textAlignment="center"
            android:layout_alignTop="@+id/imageView2"
            android:layout_toRightOf="@+id/horizontalScrollView"
            android:layout_toEndOf="@+id/horizontalScrollView"
            android:singleLine="true"
            android:width="279dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="25sp"
            android:gravity="center" />
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:id="@+id/horizontalScrollView2"
        android:layout_alignTop="@+id/imageView3"
        android:layout_marginTop="28dp"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:id="@+id/etPassword"
            android:hint="@string/password"
            android:textColor="#ffffffff"
            android:editable="true"
            android:paddingLeft="30dp"
            android:textColorHint="#FFFFFF"
            android:background="@drawable/shapecajas"
            android:password="true"
            android:layout_centerHorizontal="true"
            android:paddingRight="30dp"
            android:singleLine="true"
            android:width="279dp"
            android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="25sp" />
    </HorizontalScrollView>

    <Button
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:id="@+id/btLogin"
        android:layout_alignTop="@+id/imageView4"
        android:src="@drawable/shapecajas"
        android:background="@drawable/shapecajas"
        android:layout_marginTop="26dp"
        android:text="@string/login"
        android:textColor="#ffffffff"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:onClick="login" />

</RelativeLayout>
